{{#each Pokemons as |Pokemon| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      {{{get_Pokemon}}}
      <a href="/pokemon/{{pokemon.id}}">{{pokemon.name}}</a>
    </h2>
    <p>
      <span class="Description">{{pokemon.description}}</span>
    </p>
  </div>
  <div class="col-md-7">
    <p>
      {{pokemon.description}}
    </p>
  </div>
</div>
{{/each}}